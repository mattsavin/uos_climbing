# .env.example
# This is a template for environment variables required by the application.
# Copy this file to '.env' and fill in the values before running the application locally.

# The secret key used to sign and verify JSON Web Tokens (JWT) for user sessions.
JWT_SECRET=
APP_URL=https://sheffieldclimbing.org

# Email Configuration
# Primary: Resend SMTP
RESEND_API_KEY=
EMAIL_FROM=

# Fallback: Gmail OAuth2
EMAIL_USER=
EMAIL_CLIENT_ID=
EMAIL_CLIENT_SECRET=
EMAIL_REFRESH_TOKEN=

# Set to false on non-HTTPS deployments to prevent immediate logout
COOKIE_SECURE=true
